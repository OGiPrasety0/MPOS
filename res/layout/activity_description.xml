<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DescriptionActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="Description"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip" >

            <TextView
                android:id="@+id/textViewDescriptionIDText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="41dp"
                android:text="ID : "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewDescriptionID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDnumber"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip" >

            <TextView
                android:id="@+id/textViewDescriptionNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                android:text="Name : "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewDescriptionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="productName"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip" >

            <TextView
                android:id="@+id/textViewDescriptionPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:text="Price : "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewDescriptionPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="productPrice"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip" >

            <TextView
                android:id="@+id/textViewDescriptionCostText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="26dp"
                android:text="Cost : "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewDescriptionCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="productCost"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip" >

            <TextView
                android:id="@+id/textViewDescriptionQuantityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="Quantity : "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewDescriptionQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="productQuantity"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewDescriptionMoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More :"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewDescriptionMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aboutProduct"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:weightSum="6" >

            <Button
                android:id="@+id/buttonDescriptionEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/light_green_btn"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:maxHeight="45dip"
                android:minHeight="45dip"
                android:shadowColor="#014927"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="2.5"
                android:text="Edit"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonDescriptionBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dip"
                android:layout_weight="3"
                android:background="@drawable/light_yellow_btn"
                android:gravity="center"
                android:maxHeight="45dip"
                android:minHeight="45dip"
                android:shadowColor="#014927"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="2.5"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>