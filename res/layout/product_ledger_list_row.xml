<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutSaleListRow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal"
    android:padding="5dp" >
    
    <TextView
        android:id="@+id/textViewRowIdProductLedger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewRowNameProductLedger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRowIdProductLedger"
        android:text="TextView" />
    
    <TextView
        android:id="@+id/textViewRowTotalProductLedger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="TextView" />
    
    <TextView
        android:id="@+id/textViewRowQuantityProductLedger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRowTotalProductLedger"
        android:layout_alignParentRight="true"
        android:text="TextView" />
    
    <TextView
        android:id="@+id/textViewRowUnitPriceProductLedger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRowTotalProductLedger"
        android:layout_toLeftOf="@+id/textViewRowQuantityProductLedger"
        android:layout_marginRight="5dp"
        android:text="TextView" />

</RelativeLayout>
