<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/homebg"
    tools:context=".MenuActivity" >

    <TextView
        android:id="@+id/textViewMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Menu"
        android:textColor="#32EFAA"
        android:textSize="40sp"
        android:textStyle="bold" 
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/buttonToInvenSale"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_blue_btn"
        android:text="InventoryAndSale"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:shadowColor="#000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="2.5"
        android:textStyle="bold" 
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/buttonToLedger"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_yellow_btn"
        android:text="Ledger"
                android:shadowColor="#000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="2.5"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>